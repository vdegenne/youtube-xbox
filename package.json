{
	"name": "youtube-xbox",
	"version": "0.1.0",
	"description": "",
	"type": "module",
	"scripts": {
		"build": "wireit"
	},
	"devDependencies": {
		"@types/chrome": "^0.1.24",
		"@types/youtube": "^0.1.2",
		"@vdegenne/bip": "^1.0.4",
		"@vdegenne/debouncer": "^1.0.6",
		"@vdegenne/mini-gamepad": "^0.4.5",
		"@vdegenne/py-server": "^0.1.5",
		"@vdegenne/rollup": "^0.1.14",
		"@vdegenne/youtube": "^0.1.4",
		"@vite-pwa/assets-generator": "^1.0.2",
		"html-vision": "^0.3.4",
		"typescript": "^5.9.3",
		"wireit": "^0.14.12"
	},
	"wireit": {
		"bip": {
			"command": "bip",
			"dependencies": [
				"build:content"
			]
		},
		"build": {
			"dependencies": [
				"build:content",
				"pwa-assets",
				"bip"
			]
		},
		"build:content": {
			"command": "rollup -c",
			"files": [
				"./tsconfig.json",
				"./src",
				"./rollup.config.js"
			],
			"output": [
				"./content.js",
				"./background.js"
			]
		},
		"pwa-assets": {
			"command": "pwa-assets-generator --preset minimal-2023 --html.preset 2023 ./assets/images/logo.svg",
			"files": [
				"./assets/images/logo.svg"
			],
			"output": [
				"./assets/images/pwa-64x64.png",
				"./assets/images/pwa-192x192.png",
				"./assets/images/pwa-512x512.png",
				"./assets/images/maskable-icon-512x512.png",
				"./assets/images/apple-touch-icon-180x180.png",
				"./assets/images/favicon.ico"
			]
		},
		"reload:chrome-extension": {
			"command": "ydotool key 56:1 19:1 19:0 56:0 && ydotool key 29:1 19:1 19:0 29:0",
			"dependencies": [
				"build:content",
				"bip"
			]
		}
	}
}
